<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/title_styles"
        layout="@layout/title_styles"
        />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_styles"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2.0" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" >

                <Button
                    android:id="@+id/btn_badge_view"
                    style="@style/main_status"
                    android:text="BadgeView-控件上显示数字"
                    />
                <Button
                    android:id="@+id/btn_gridview_view"
                    style="@style/main_status"
                    android:layout_below="@id/btn_badge_view"
                    android:text="GridView自适应"
                    />

                <Button
                    android:id="@+id/btn_recycleview_view"
                    style="@style/main_status"
                    android:layout_below="@id/btn_gridview_view"
                    android:text="RecyclerView的所有使用方法"
                    />

                <Button
                    android:id="@+id/btn_snow"
                    style="@style/main_status"
                    android:layout_below="@id/btn_gridview_view"
                    android:text="下雪的效果"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" >

                <Button
                    android:id="@+id/btn_custom_text"
                    style="@style/main_status"
                    android:text="text文本顶格显示" />
                <Button
                    android:id="@+id/btn_custom_pic"
                    style="@style/main_status"
                    android:layout_below="@id/btn_custom_text"
                    android:text="图片显示" />
                <Button
                    android:id="@+id/btn_progress"
                    style="@style/main_status"
                    android:layout_below="@id/btn_custom_pic"
                    android:text="进度条不同样式" />

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>

