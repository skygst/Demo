                                                    android:text="TextView 控件的使用" />-->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" >

                <Button
                    android:id="@+id/btn_custom_dialog"
                    style="@style/main_status"
                    android:text="Dialog的使用" />

                <Button
                    android:id="@+id/btn_webview"
                    style="@style/main_status"
                    android:layout_below="@id/btn_custom_dialog"
                    android:text="WebView的使用" />

                <Button
                    android:id="@+id/btn_listView_value"
                    style="@style/main_status"
                    android:layout_below="@id/btn_webview"
                    android:text="ListView的用法测试" />

                 <Button
                     android:id="@+id/btn_click_effect"
                     style="@style/main_status"
                     android:layout_below="@id/btn_listView_value"
                     android:text="按钮的点击效果" />

                <Button
                    android:id="@+id/btn_db_test"
                    style="@style/main_status"
                    android:layout_below="@id/btn_click_effect"
                    android:text="数据库 测试" />
