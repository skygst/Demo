<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app">

    <include
        android:id="@+id/title_styles"
        layout="@layout/title_styles"
        />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_styles"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2.0" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" >

                <Button
                    android:id="@+id/btn_btnCustom"
                    style="@style/main_status"
                    android:text="自定义控件" />

                <Button
                    android:id="@+id/btn_lines"
                    style="@style/main_status"
                    android:layout_below="@id/btn_btnCustom"
                    android:text="自定义虚线和框" />

                <Button
                    android:id="@+id/btn_animation"
                    style="@style/main_status"
                    android:layout_below="@id/btn_lines"
                    android:text="animation动画效果的使用" />

                <Button
                    android:id="@+id/btn_controls"
                    style="@style/main_status"
                    android:layout_below="@id/btn_animation"
                    android:text="不同控件的使用方法" />

                <Button
                    android:id="@+id/btn_lock_screen"
                    style="@style/main_status"
                    android:layout_below="@id/btn_controls"
                    android:text="手势解锁" />
