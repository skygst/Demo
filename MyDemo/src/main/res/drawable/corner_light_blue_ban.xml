<?xml version="1.0" encoding="UTF-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="0.0px"
    android:insetRight="0.0px" >

    <selector>
        <item android:state_pressed="true">
            <shape>
                <gradient
                    android:angle="270.0"
                    android:endColor="#4e9f97"
                    android:startColor="#4e9f97" />

                    <!-- android:radius="2.0dip" -->
                <corners
                    android:bottomLeftRadius="15.0dip"
                    android:bottomRightRadius="15.0dip"
                    android:topLeftRadius="0.0dip"
                    android:topRightRadius="0.0dip" />
                <stroke 
                    android:width="1dp" 
                    android:color="@color/transparent" />
            </shape>
        </item>
        <item>
            <shape>
                <gradient
                    android:angle="270.0"
                    android:endColor="#39daca"
                    android:startColor="#39daca" />

<!--                     android:radius="2.0dip" -->
                <corners
                    android:bottomLeftRadius="15.0dip"
                    android:bottomRightRadius="15.0dip"
                    android:topLeftRadius="0.0dip"
                    android:topRightRadius="0.0dip" />
                <stroke 
                    android:width="1dp" 
                    android:color="@color/transparent" />
            </shape>
        </item>
    </selector>

</inset>