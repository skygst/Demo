<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_layout"
    style="@style/matchMatch"
    android:background="@drawable/comments_buy_bg">

    <RelativeLayout
        android:id="@+id/rl_blackboard"
        style="@style/wrapContent"
        android:background="@drawable/small_blackboard">

        <ScrollView style="@style/matchMatch"
            android:overScrollMode="never"
            android:scrollbars="none"
            >

            <RelativeLayout style="@style/matchMatch">

                <TextView
                    android:id="@+id/tv_content"
                    style="@style/matchWrap"
                    android:textColor="@color/white2"
                    android:lineSpacingMultiplier="1.2"
                    android:textSize="15sp" />
            </RelativeLayout>

        </ScrollView>


    </RelativeLayout>

    <com.ebodoo.raz.custom.ClickImageView
        android:id="@+id/iv_buy_icon"
        style="@style/wrapContent"
        android:src="@drawable/icon_comments_buy" />

    <ImageView
        android:id="@+id/iv_teacher"
        style="@style/wrapContent"
        android:src="@drawable/teacher" />

    <ImageView
        android:id="@+id/iv_back"
        style="@style/wrapContent"
        android:src="@drawable/bt_front" />


</RelativeLayout>