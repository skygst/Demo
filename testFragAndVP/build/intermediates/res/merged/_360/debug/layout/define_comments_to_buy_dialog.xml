<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <RelativeLayout
        android:id="@+id/rl_bg"
        style="@style/wrapContent"
        android:background="@drawable/buy_dialog_bg">

        <RelativeLayout
            android:id="@+id/rl_once"
            style="@style/matchWrap"
            android:background="@drawable/white_bg">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_all"
            style="@style/matchWrap"
            android:layout_below="@id/rl_once"
            android:layout_marginTop="10dp"
            android:background="@drawable/green_bg">

        </RelativeLayout>

        <View
            android:id="@+id/view_center"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            />

        <RelativeLayout
            android:id="@+id/rl_left"
            style="@style/matchWrap"
            android:layout_below="@id/rl_all"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/view_center"
            >

            <com.ebodoo.raz.custom.ClickImageView
                android:id="@+id/iv_left"
                style="@style/matchWrap"
                android:src="@drawable/dialog_cancel" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_right"
            style="@style/matchWrap"
            android:layout_below="@id/rl_all"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/view_center" >

            <com.ebodoo.raz.custom.ClickImageView
                android:id="@+id/iv_right"
                style="@style/matchWrap"
                android:src="@drawable/dialog_to_buy" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>