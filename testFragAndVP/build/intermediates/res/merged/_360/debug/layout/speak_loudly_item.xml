<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/matchMatch">

    <View
        android:id="@+id/view_top"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/iv_title"
        style="@style/wrapContent"
        android:src="@drawable/speak_loudly_1_title" />

    <ImageView
        style="@style/matchWrap"
        android:layout_height="2dp"
        android:layout_alignBottom="@id/iv_title"
        android:layout_alignTop="@id/iv_title"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_title"
        android:gravity="center_vertical"
        android:src="@drawable/dotted_line" />

    <RelativeLayout
        style="@style/matchWrap"
        android:layout_below="@id/iv_title"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            style="@style/matchWrap"
            android:orientation="horizontal"
            android:weightSum="4.0">

            <RelativeLayout
                style="@style/wrapContent"
                android:layout_weight="1.0">

            <com.ebodoo.raz.custom.ClickImageView
                android:id="@+id/iv_pic_1"
                style="@style/wrapContent"
                android:src="@drawable/speak_loudly_learn_together" />

            </RelativeLayout>

            <RelativeLayout
                style="@style/wrapContent"
                android:layout_weight="1.0">

                <com.ebodoo.raz.custom.ClickImageView
                    android:id="@+id/iv_pic_2"
                    style="@style/wrapContent"
                    android:src="@drawable/speak_loudly_1_story" />

                <ImageView
                    android:id="@+id/iv_lock_2"
                    android:layout_width="70dp"
                    android:layout_height="81dp"
                    android:src="@drawable/speak_lock"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />
            </RelativeLayout>


            <RelativeLayout
                style="@style/wrapContent"
                android:layout_weight="1.0">

                <com.ebodoo.raz.custom.ClickImageView
                    android:id="@+id/iv_pic_3"
                    style="@style/wrapContent"
                    android:src="@drawable/speak_loudly_1_script" />

                <ImageView
                    android:id="@+id/iv_lock_3"
                    android:layout_width="70dp"
                    android:layout_height="81dp"
                    android:src="@drawable/speak_lock"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/wrapContent"
                android:layout_weight="1.0">

                <com.ebodoo.raz.custom.ClickImageView
                    android:id="@+id/iv_pic_4"
                    style="@style/wrapContent"
                    android:src="@drawable/speak_loudly_1_parenting" />

                <ImageView
                    android:id="@+id/iv_lock_4"
                    android:layout_width="70dp"
                    android:layout_height="81dp"
                    android:src="@drawable/speak_lock"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
