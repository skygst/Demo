<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_layout"
    style="@style/matchMatch">

    <com.ebodoo.raz.custom.ClickImageView
        android:id="@+id/iv_pic_1"
        style="@style/wrapContent" />

    <com.ebodoo.raz.custom.ClickImageView
        android:id="@+id/iv_pic_2"
        style="@style/wrapContent" />

    <com.ebodoo.raz.custom.ClickImageView
        android:id="@+id/iv_pic_3"
        style="@style/wrapContent" />

    <ImageView
    android:id="@+id/iv_answer"
    style="@style/wrapContent"
    android:src="@drawable/complete_ok"
    android:visibility="gone"
    />
    <ImageView
        android:id="@+id/iv_body"
        style="@style/wrapContent"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/iv_pic_head"
        style="@style/wrapContent"
        />
    <ImageView
        android:id="@+id/iv_pic_arm"
        style="@style/wrapContent"
        />
    <ImageView
        android:id="@+id/iv_pic_eye"
        style="@style/wrapContent"
        />
    <ImageView
        android:id="@+id/iv_pic_nose"
        style="@style/wrapContent"
        />

    <ImageView
        android:id="@+id/iv_card_head"
        style="@style/wrapContent"
        />
    <ImageView
        android:id="@+id/iv_card_arm"
        style="@style/wrapContent"
        />
    <ImageView
        android:id="@+id/iv_card_eye"
        style="@style/wrapContent"
        />
    <ImageView
        android:id="@+id/iv_card_nose"
        style="@style/wrapContent"
        />

    <ImageView
        android:id="@+id/iv_shou"
        style="@style/wrapContent"
        android:src="@drawable/shou"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/iv_back"
        style="@style/wrapContent"
        android:src="@drawable/bt_front" />

    <TextView
        android:id="@+id/tv_sentence"
        style="@style/wrapContent"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>