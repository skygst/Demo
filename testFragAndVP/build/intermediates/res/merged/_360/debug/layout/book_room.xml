<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/book_room_bg">

    <ImageView
        android:id="@+id/iv_back"
        style="@style/wrapContent"
        android:src="@drawable/bt_front" />

    <ImageView
        android:id="@+id/iv_book_room_title"
        style="@style/wrapContent"
        android:src="@drawable/icon_bookroom" />

    <com.ebodoo.raz.custom.ClickImageView
        android:id="@+id/iv_level_1"
        style="@style/wrapContent"
        android:src="@drawable/level_aa" />

    <com.ebodoo.raz.custom.ClickImageView
        android:id="@+id/iv_level_2"
        style="@style/wrapContent"
        android:src="@drawable/level_a" />

    <com.ebodoo.raz.custom.ClickImageView
        android:id="@+id/iv_level_3"
        style="@style/wrapContent"
        android:src="@drawable/level_b" />

    <com.ebodoo.raz.custom.ClickImageView
        android:id="@+id/iv_level_4"
        style="@style/wrapContent"
        android:src="@drawable/level_c"/>

    <com.ebodoo.raz.custom.ClickImageView
        android:id="@+id/iv_level_5"
        style="@style/wrapContent"
        android:src="@drawable/level_picture_book_1"/>

    <com.ebodoo.raz.custom.ClickImageView
        android:id="@+id/iv_level_6"
        style="@style/wrapContent"
        android:src="@drawable/level_picture_book_2" />

    <com.ebodoo.raz.custom.ClickImageView
        android:id="@+id/iv_level_7"
        style="@style/wrapContent"
        android:src="@drawable/level_picture_book_3" />

    <com.ebodoo.raz.custom.ClickImageView
        android:id="@+id/iv_level_8"
        style="@style/wrapContent"
        android:src="@drawable/level_picture_book_4" />

    <com.ebodoo.raz.custom.ClickImageView
        android:id="@+id/iv_my_recorder"
        style="@style/wrapContent"
        android:src="@drawable/my_recorder" />

    <RelativeLayout
        android:id="@+id/rl_comments_times_bg"
        style="@style/wrapContent"
        android:background="@drawable/comments_times_bg"
        >

        <TextView
            android:id="@+id/tv_times"
            style="@style/wrapContent"
            android:text="7"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_date"
        style="@style/wrapContent"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:text="有效期至：2016.10.16"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/iv_my_recorder" />

    <ImageView
        android:id="@+id/iv_1"
        style="@style/wrapContent"
        android:src="@drawable/fenjiyuedu"
        />

    <ImageView
        android:id="@+id/iv_2"
        style="@style/wrapContent"
        android:src="@drawable/tuozhanyuedu" />

    <ImageView
        android:id="@+id/iv_line_1"
        style="@style/wrapContent"
        android:src="@drawable/split_line" />

    <ImageView
        android:id="@+id/iv_line_2"
        style="@style/wrapContent"
        android:src="@drawable/split_line" />

    <ImageView
        android:id="@+id/iv_line_3"
        style="@style/wrapContent"
        android:src="@drawable/split_line" />

    <ImageView
        android:id="@+id/iv_line_4"
        style="@style/wrapContent"
        android:src="@drawable/split_line" />

    <ImageView
        android:id="@+id/iv_honor"
        style="@style/wrapContent" />

</RelativeLayout>