<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.ebodoo.raz.MyVideoView
            android:id="@+id/video_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/rl_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/iv_drum_1"
                style="@style/wrapContent" />

            <ImageView
                android:id="@+id/iv_drum_2"
                style="@style/wrapContent" />

            <ImageView
                android:id="@+id/iv_drum_3"
                style="@style/wrapContent" />

            <ImageView
                android:id="@+id/iv_drum_4"
                style="@style/wrapContent" />

            <ImageView
                android:id="@+id/iv_drum_5"
                style="@style/wrapContent" />

            <ImageView
                android:id="@+id/iv_drum_6"
                style="@style/wrapContent" />

            <ImageView
                android:id="@+id/iv_drum_7"
                style="@style/wrapContent" />

            <ImageView
                android:id="@+id/iv_drum_8"
                style="@style/wrapContent" />

            <ImageView
                android:id="@+id/iv_drum_9"
                style="@style/wrapContent" />

            <ImageView
                android:id="@+id/iv_answer_1"
                style="@style/wrapContent" />

            <ImageView
                android:id="@+id/iv_answer_2"
                style="@style/wrapContent" />

            <ImageView
                android:id="@+id/iv_answer_3"
                style="@style/wrapContent" />

            <ImageView
                android:id="@+id/iv_answer_4"
                style="@style/wrapContent" />

            <ImageView
                android:id="@+id/iv_answer_5"
                style="@style/wrapContent" />

            <ImageView
                android:id="@+id/iv_answer_6"
                style="@style/wrapContent" />

            <ImageView
                android:id="@+id/iv_answer_7"
                style="@style/wrapContent" />

            <ImageView
                android:id="@+id/iv_answer_8"
                style="@style/wrapContent" />

            <ImageView
                android:id="@+id/iv_answer_9"
                style="@style/wrapContent" />

            <RelativeLayout
                android:id="@+id/rl_num"
                style="@style/wrapContent"
                android:background="@drawable/count2" >

                <TextView
                    android:id="@+id/tv_num"
                    style="@style/wrapContent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text="2 / 8"
                    android:textColor="@color/white"
                    android:textSize="22sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_drum_num"
                style="@style/wrapContent"
                android:src="@drawable/drum" />
        </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/bt_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bt_front" />

        <ImageView
            android:id="@+id/btn_readagain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/read"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_shou"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>