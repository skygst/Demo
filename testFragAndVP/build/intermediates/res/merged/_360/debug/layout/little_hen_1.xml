<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_layout"
    style="@style/matchMatch"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_card_1"
        style="@style/wrapContent" />

    <com.gst.move.custom.AnimationImageView
        android:id="@+id/iv_animation_1"
        style="@style/wrapContent" />

    <ImageView
        android:id="@+id/iv_card_2"
        style="@style/wrapContent" />

    <com.gst.move.custom.AnimationImageView
        android:id="@+id/iv_animation_2"
        style="@style/wrapContent" />

    <ImageView
        android:id="@+id/iv_card_3"
        style="@style/wrapContent" />

    <com.gst.move.custom.AnimationImageView
        android:id="@+id/iv_animation_3"
        style="@style/wrapContent" />

    <TextView
        android:id="@+id/tv_problem"
        style="@style/levelAGameProblemParams"
        android:text="How do you make flour?" />

    <ImageView
        android:id="@+id/iv_shou"
        style="@style/wrapContent"
        android:src="@drawable/shou"
        android:visibility="gone" />

</RelativeLayout>