<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval"
    android:useLevel="false" >

    <!-- 设置边框的宽度和颜色 -->
    <stroke
        android:width="1dp"
        android:color="@color/red" />
    <!-- 设置框内的填充色 -->
    <solid android:color="@color/red" />
    <!-- 设置圆角 -->
    <corners android:radius="1dip" />
    <!-- 设置内边距 -->
    <size
        android:height="10dp"
        android:width="10dp" />

</shape>

