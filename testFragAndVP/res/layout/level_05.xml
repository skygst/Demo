<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.ebodoo.raz.MyVideoView
            android:id="@+id/video_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/rl_qipao"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/bt_after"
                android:layout_width="126dp"
                android:layout_height="104.667dp"
                android:src="@drawable/touming" />

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@id/iv1"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@id/iv2"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@id/iv3"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/paopao_selected"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv1_11"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv1_21"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv1_31"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv1_41"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv111"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_after"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_shou"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/shou" />

            <ImageView
                android:id="@+id/iv_back"
                style="@style/wrapContent"
                android:src="@drawable/bt_front" />
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>