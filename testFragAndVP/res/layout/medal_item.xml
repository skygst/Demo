<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/matchMatch">

    <RelativeLayout
        android:id="@+id/rl_gridview"
        style="@style/wrapContent"
        android:background="@drawable/medal_0_bg"
        android:orientation="vertical" >

        <com.ebodoo.raz.custom.InnerGridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="4dip"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="4dip" ></com.ebodoo.raz.custom.InnerGridView>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_type"
        style="@style/wrapContent"
        android:layout_alignLeft="@id/rl_gridview"
        android:layout_alignTop="@id/rl_gridview"
        android:layout_marginTop="-10dp"
        android:src="@drawable/type_1"
        />

</RelativeLayout>