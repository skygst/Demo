<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_layout"
    style="@style/matchMatch" >

    <ImageView
        android:id="@+id/iv_card"
        style="@style/wrapContent" />

    <ImageView
        android:id="@+id/iv_pic_1"
        style="@style/wrapContent" />

    <ImageView
        android:id="@+id/iv_pic_2"
        style="@style/wrapContent" />

    <ImageView
        android:id="@+id/iv_back"
        style="@style/wrapContent"
        android:src="@drawable/bt_front" />

    <RelativeLayout
        style="@style/wrapContent"
        android:layout_below="@id/iv_card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        >
        <TextView
            android:id="@+id/tv_question_1"
            style="@style/wrapContent"
            android:textColor="@color/black"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tv_question_2"
            style="@style/wrapContent"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/tv_question_1"
            android:layout_marginTop="6dp"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tv_question_3"
            style="@style/wrapContent"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/tv_question_2"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tv_question_4"
            style="@style/wrapContent"
            android:layout_toRightOf="@id/tv_question_1"
            android:layout_toLeftOf="@id/tv_question_3"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

    </RelativeLayout>

