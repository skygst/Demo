<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_layout"
    style="@style/matchMatch">

    <ImageView
        android:id="@+id/iv_card_1"
        style="@style/wrapContent" />

    <ImageView
        android:id="@+id/iv_card_2"
        style="@style/wrapContent" />

    <ImageView
        android:id="@+id/iv_card_3"
        style="@style/wrapContent" />

    <ImageView
        android:id="@+id/iv_card_4"
        style="@style/wrapContent" />

    <ImageView
        android:id="@+id/iv_location_1"
        style="@style/wrapContent"
        android:src="@color/transparent" />

    <ImageView
        android:id="@+id/iv_location_2"
        style="@style/wrapContent"
        android:src="@color/transparent" />

    <ImageView
        android:id="@+id/iv_location_3"
        style="@style/wrapContent"
        android:src="@color/transparent" />

    <ImageView
        android:id="@+id/iv_location_4"
        style="@style/wrapContent"
