<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_layout"
    style="@style/matchMatch"
    android:background="@drawable/listen_bg">

    <ImageView
        android:id="@+id/iv_card_1"
        style="@style/wrapContent" />

    <ImageView
        android:id="@+id/iv_card_2"
        style="@style/wrapContent" />

    <ImageView
        android:id="@+id/iv_card_3"
        style="@style/wrapContent" />

    <ImageView
        android:id="@+id/iv_star"
        style="@style/wrapContent"
        android:visibility="gone"
        android:src="@drawable/color_star"
        />
    <ImageView
        android:id="@+id/iv_lailai"
        style="@style/wrapContent"
        android:visibility="gone"
        android:src="@drawable/lailai_encourage"
        />


    <HorizontalScrollView
        android:id="@+id/horizon_scrollview"
        style="@style/matchMatch"
        android:overScrollMode="never"
        android:scrollbars="none" >

        <RelativeLayout
            style="@style/matchMatch">

            <ImageView
                android:layout_width="2000dp"
                android:layout_height="match_parent"
                android:src="@color/transparent"
                />

            <ImageView
                android:id="@+id/iv_rake"
                style="@style/wrapContent"
                android:src="@drawable/listen_rake"
                />

        </RelativeLayout>

    </HorizontalScrollView>

</RelativeLayout>