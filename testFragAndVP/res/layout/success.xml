<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <!-- android:background="@drawable/success_bg" -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.ebodoo.raz.MyVideoView
            android:id="@+id/video_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <View
                android:id="@+id/view12"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <View
		        android:id="@+id/view102"
		        android:layout_width="1dp"
		        android:layout_height="1dp"
		        android:layout_centerHorizontal="true"
		        android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/iv_box"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:background="@drawable/touming" />

            <ImageView
                android:id="@+id/iv_level"
                android:layout_width="400dp"
                android:layout_height="186dp" />

            <ImageView
                android:id="@+id/iv_gongxi"
                android:layout_width="366dp"
                android:layout_height="73dp" />

            <ImageView
                android:id="@+id/iv_guoguan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_guoguan_ch"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_guanka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/view102"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textColor="@color/orange"
                android:textSize="40sp"
                android:textStyle="bold|italic"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_jinbi"
                android:layout_width="223dp"
                android:layout_height="47dp"
                android:layout_below="@id/view102"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/iv_guoguan_jinbi"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/bt_replay"
                android:layout_width="133.33dp"
                android:layout_height="126dp"
                android:src="@drawable/bt_replay_ch" />

            <ImageView
                android:id="@+id/bt_next"
                android:layout_width="133.33dp"
                android:layout_height="126dp"
                android:src="@drawable/bt_next_ch" />

            <ImageView
	            android:id="@+id/bt_home"
	            android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	            android:background="@drawable/bt_front"  />
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>