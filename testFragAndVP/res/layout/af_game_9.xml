        <ImageView
            android:id="@+id/iv_card_3"
            style="@style/wrapContent" />

        <ImageView
            android:id="@+id/iv_card_4"
            style="@style/wrapContent" />
        
        <ImageView
            android:id="@+id/iv_title_1"
            style="@style/wrapContent" />

        <ImageView
            android:id="@+id/iv_title_2"
            style="@style/wrapContent" />

        <ImageView
            android:id="@+id/iv_title_3"
            style="@style/wrapContent" />

        <ImageView
            android:id="@+id/iv_title_4"
            style="@style/wrapContent" />

        <ImageView
            android:id="@+id/iv_bottom_bg_1"
            style="@style/wrapContent" />

        <ImageView
            android:id="@+id/iv_bottom_bg_2"
            style="@style/wrapContent" />

        <ImageView
            android:id="@+id/iv_bottom_bg_3"
            style="@style/wrapContent" />

        <ImageView
            android:id="@+id/iv_bottom_bg_4"
            style="@style/wrapContent" />
        <ImageView
            android:id="@+id/iv_bottom_1"
            style="@style/wrapContent" />

        <ImageView
            android:id="@+id/iv_bottom_2"
            style="@style/wrapContent" />

        <ImageView
            android:id="@+id/iv_bottom_3"
            style="@style/wrapContent" />

        <ImageView
            android:id="@+id/iv_bottom_4"
            style="@style/wrapContent" />
