<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/matchMatch"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_bg"
        style="@style/wrapContent"
        android:src="@drawable/shop_bg" />

    <com.ebodoo.raz.custom.ClickImageView
        android:id="@+id/iv_close"
        style="@style/wrapContent"
        android:src="@drawable/login_close" />

    <ScrollView
        android:id="@+id/sl_view"
        style="@style/matchMatch"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout style="@style/matchMatch">

            <com.ebodoo.raz.custom.MyGridView
                android:id="@+id/myGridView"
                style="@style/matchMatch"
                android:layout_centerHorizontal="true"
                android:horizontalSpacing="2dp"
                android:listSelector="@color/trans"
                android:numColumns="4"
                android:stretchMode="columnWidth"
                android:verticalSpacing="1dp" />

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_exchange"
        style="@style/matchMatch"
        android:background="@color/transparent_background"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/iv_exchange_bg"
            style="@style/wrapContent"
            android:src="@drawable/exchange_bg" />

        <com.ebodoo.raz.custom.ClickImageView
            android:id="@+id/iv_exchange_close"
            style="@style/wrapContent"
            android:src="@drawable/login_close" />

        <RelativeLayout
            android:id="@+id/rl_input_password"
            style="@style/wrapContent"
            android:background="@drawable/teach_input_password">

            <EditText
                android:id="@+id/et_password"
                style="@style/matchMatch"
                android:hint="请老师输入密码"
                android:textColorHint="@color/gray"
                android:textColor="@color/black"
                android:imeOptions="flagNoExtractUi"
                android:singleLine="true"
                android:background="@null" />

        </RelativeLayout>

        <com.ebodoo.raz.custom.ClickImageView
            android:id="@+id/iv_exchange_confirm"
            style="@style/wrapContent"
            android:src="@drawable/exchange_confirm" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_success"
        style="@style/matchMatch"
        android:background="@color/transparent_background"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/iv_success_bg"
            style="@style/wrapContent"
            android:src="@drawable/exchange_success_bg"
            />

        <ImageView
            android:id="@+id/iv_success_material_object"
            style="@style/wrapContent"
            android:src="@drawable/material_object"
            />

        <com.ebodoo.raz.custom.ClickImageView
            android:id="@+id/iv_success_confirm"
            style="@style/wrapContent"
            android:src="@drawable/exchange_success_confirm"
            />

        </RelativeLayout>

</RelativeLayout>